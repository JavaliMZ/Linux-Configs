#                          #
#   # JavaliMZ Configs #   #
#                          #
############################

# Always execute on start
exec_always /home/javali/.opam/default/bin/google-drive-ocamlfuse Google-Drive
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always feh --bg-fill /usr/share/backgrounds/i3/wall.png
exec_always picom -f --config $HOME/.config/picom/picom.conf
exec --no-startup-id xrandr --output HDMI-2 --right-of HDMI-1 --auto
exec_always python $HOME/.config/i3/alternating_layouts.py
exec --no-startup-id sleep 3 &amp; &amp; xfce4-power-manager
 
# i3 settings
set $mod Mod4
font pango:monospace 15
gaps inner 10

# Lanchers
bindsym $mod+p exec flameshot screen
bindsym $mod+o exec flameshot gui
bindsym $mod+Shift+s exec flameshot gui
bindsym $mod+Return exec alacritty
bindsym $mod+w kill
bindsym $mod+Ctrl+space exec --no-startup-id rofi -show drun -theme Monokai -icon-theme "Tela-circle" -show-icons
bindsym $mod+space exec --no-startup-id rofi -show run -theme Monokai -icon-theme "Numix Circle" -show-icons
bindsym $mod+l exec betterlockscreen -l
bindsym $mod+g exec google-chrome-stable

# Volume and brightness
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Moving and controling windows
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split orientation
bindsym $mod+h split h
bindsym $mod+v split v

# Full and float windows
bindsym $mod+f fullscreen toggle
bindsym $mod+s floating toggle
floating_modifier $mod

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6

# Reload and Restart
bindsym $mod+Shift+r reload
bindsym $mod+Shift+Ctrl+r restart

# Hide all titles
for_window [class="^.*"] border pixel 1
